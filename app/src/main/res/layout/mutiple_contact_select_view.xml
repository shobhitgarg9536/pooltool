<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewMultiplecontactimage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:drawable/ic_menu_camera"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewmultipleContactName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Contact Name"
        android:textColor="#000"
        android:textIsSelectable="false"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/checkboxMultipleselected"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewMultiplecontactimage"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textviewMultipleContactNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="09876543210"
        android:textColor="#2689e0"
        android:textIsSelectable="false"
        android:textSize="14dp"
        tools:layout_conversion_absoluteX="64dp"
        tools:layout_conversion_absoluteY="34dp"
        tools:layout_conversion_absoluteWidth="272dp"
        tools:layout_conversion_absoluteHeight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewmultipleContactName"
        app:layout_constraintLeft_toRightOf="@+id/imageViewMultiplecontactimage"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/checkboxMultipleselected"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp" />

    <CheckBox
        android:id="@+id/checkboxMultipleselected"
        android:background="@drawable/abc_btn_check_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>