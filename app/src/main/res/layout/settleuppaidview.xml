<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewsettleUpImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/moneytransfer"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSettleUpContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Contact"
        android:textColor="#000"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewsettleUpImage"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textViewSettleUp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Amount:"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewsettleUpImage"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewSettleUpContact"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textViewSettleUpAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Amount"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@+id/textViewSettleUp2"

        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewSettleUpContact" />

    <Button
        android:text="Pay"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSettleUpPay"
        android:background="@drawable/curve_shape"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textViewSettleUpContact"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

</android.support.constraint.ConstraintLayout>